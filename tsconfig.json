{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "declaration": false,
    "module": "esnext",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
